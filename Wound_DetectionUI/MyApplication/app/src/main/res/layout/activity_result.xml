        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="溫度分布"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
